<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="ui form">
    <h2>Sign up</h2>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, placeholder: "email@example.com" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "dont use 'password' >.>" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  </div>
<% end %>
<div id="loglink">
  <%= render "devise/shared/links" %>
</div>