
<div id="logform">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="ui form">
      <h2>Log in</h2>
      <div class="fields">
        <div class="sixteen wide field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, placeholder: "welcome@to.wikly" %>
        </div>
      </div>

      <div class="fields">
        <div class="sixteen wide field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field"><nl>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div></nl>
      <% end -%>
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
    </div>
  <% end %>
</div>
<div id="link">
<%= render "devise/shared/links" %>
</div>
